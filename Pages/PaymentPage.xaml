<Page x:Class="UIKitTutorials.Pages.PaymentPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:UIKitTutorials.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PaymentPage">

    <Border CornerRadius="5" Background="#FF3D3D3E">
        <Button HorizontalAlignment="Left" VerticalAlignment="Top" FontFamily="Montserrat" FontWeight="Medium" Height="53" Width="54" Style="{StaticResource IconButtonsStyle}" Foreground="White" BorderBrush="#00707070" Margin="24,26,0,0" Click="Button_Click">
            <Button.Background>
                <ImageBrush ImageSource="/Pages/unnamed.png"/>
            </Button.Background>
            <Button Content="Button"/>
        </Button>
    </Border>
</Page>

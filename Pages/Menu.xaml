                                <SplineThicknessKeyFrame KeyTime="00:00:00.1" Value="0, 0,5,0" />
                                <SplineThicknessKeyFrame KeyTime="00:00:00.3" Value="0, 0,20,0" />
                            </ThicknessAnimationUsingKeyFrames>
                            <ColorAnimation Storyboard.TargetName="BorderCB" Storyboard.TargetProperty="Background.Color" Duration="0:0:0.3"></ColorAnimation>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </ControlTemplate.Triggers>
